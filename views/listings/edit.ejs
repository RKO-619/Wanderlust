<% layout("/layouts/boilerplate") %>   
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Edit your Listing</h3>
            <form method="Post" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="md-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" value="<%= listing.title %>" class="form-control" type="text" required>
                    <div class="invalid-feedback">Please enter a valid title</div>
                </div>
                
                <div class="md-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" rows="5" cols="40"class="form-control" required> <%= listing.description %></textarea>
                    <div class="invalid-feedback">Please enter a short decription</div>
                </div>

                <div class="md-3">
                    Orginal Listing Image <br/>
                    <img src="<%= orginalImageUrl %>"/>
                </div>

                <div class="md-3">
                    <label for="image" class="form-label" >Upload New Image</label>
                    <input name="listing[image]" type="file" class="form-control">
                    <div class="invalid-feedback">Please enter a valid image link</div>       
                </div>

                <div class="row">
                    <div class="md-3 col-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" value="<%= listing.price %>" class="form-control" type="number" required>
                        <div class="invalid-feedback">Please enter a valid price</div>       
                    </div>
                    <div class="md-3 col-8">
                        <label for="loaction" class="form-label">Loaction</label>
                        <input name="listing[country]" value="<%= listing.country %>" type="text"  class="form-control" required>
                        <div class="invalid-feedback">Please enter a country name</div>
                    </div>
                </div>    
                
                <div class="md-3">
                    <label for="country" class="form-label">Country</label>
                    <input name="listing[location]"  value="<%= listing.location %>" type="text"  class="form-control" required>
                    <div class="invalid-feedback">Please enter a valid location</div>
                </div>
                <button class="btn btn-dark edit-btn mt-3"> Edit </button>
            </form>
        
        </div>
    </div>
    
    